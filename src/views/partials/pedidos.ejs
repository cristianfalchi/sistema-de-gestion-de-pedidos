<div class="all-pedidos">
    <% if(locals.data) {  %>
        <% for(let i = 0; i < locals.data.length; i++) {%>
            <div class="one-pedido">
                <div class="nro-pedido" id="pedido" style="cursor: default">
                    <b><%= locals.data[i].pedido %></b>
                </div>
                <div id="cliente" style="cursor: default">
                    <%= locals.data[i].cliente %>
                </div>
                <div id="cli_nom" style="cursor: default">
                    <%= locals.data[i].cli_nom %>
                </div>
                <div id="vendedor" style="cursor: default">
                    <%= locals.data[i].vendedor %>
                </div>
                <div id="estado" style="cursor: default">
                    <%= locals.data[i].estado %>
                </div>
                <div id="ruta" style="cursor: default">
                    <%= locals.data[i].ruta %>
                </div>
                <div id="fecha" style="cursor: default">
                    <%= locals.data[i].fecha %>
                </div>

                <div>
                    <a style="cursor: default" href=<%=`/pedidos/edit/${locals.data[i].pedido}/${locals.data[i].cliente}/${locals.data[i].ruta}?pedido=${locals.pedido}&cliente=${locals.cliente}&vendedor=${locals.vendedor}&estado=${locals.estado}&ruta=${locals.ruta}&fecha_desde=${locals.fecha_desde}&fecha_hasta=${locals.fecha_hasta}`%>>
                        <img class=" icon-edit " src="/img/icon/flecha-editar.svg " alt="Imagen para seleccionar un pedido ">
                    </a>
                    <!-- pedido: locals.pedido, cliente: locals.cliente, vendedor: locals.vendedor, estado: locals.estado, ruta: locals.ruta, fecha_desde: locals.fecha_desde, fecha_hasta: locals.fecha_hasta -->
                </div>
            </div>
            <% } %>
                <% } %>
</div>
<% if(locals.cant_ped > 10) { %>
    <div class="paginacion ">
        <a class="anterior <% if(!locals.offset || locals.offset==0 ) { %>
    <%= " fin-paginacion "  %>
        <% } %> " href="/pedidos/page/
            <%= `${locals.currentPage - 1}?next=0&cant_ped=${locals.cant_ped}&conditionQuery=${locals.conditionQuery}&offset=${locals.offset}&limit=${locals.limit}&currentPage=${locals.currentPage}&pages=${locals.pages}&pedido=${locals.pedido}&cliente=${locals.cliente}&vendedor=${locals.vendedor}&estado=${locals.estado}&ruta=${locals.ruta}&fecha_desde=${locals.fecha_desde}&fecha_hasta=${locals.fecha_hasta}` %> "> Anteriores
</a>
        <a class="siguiente <% if(locals.currentPage == locals.pages) { %> 
        <%= " fin-paginacion "  %>                                                                                                                                                                                                               
    <% } %>" href="/pedidos/page/<%= `${locals.currentPage + 1}?next=1&cant_ped=${locals.cant_ped}&conditionQuery=${locals.conditionQuery}&offset=${locals.offset}&limit=${locals.limit}&currentPage=${locals.currentPage}&pages=${locals.pages}&pedido=${locals.pedido}&cliente=${locals.cliente}&vendedor=${locals.vendedor}&estado=${locals.estado}&ruta=${locals.ruta}&fecha_desde=${locals.fecha_desde}&fecha_hasta=${locals.fecha_hasta}` %> ">
    Siguientes
 </div>
<% } %>